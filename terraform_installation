# Create a move into directory.
mkdir terraform
mkdir packer

cd ~/terraform

# Download Terraform.
curl -O https://releases.hashicorp.com/terraform/0.9.4/terraform_0.9.4_linux_amd64.zip
# Unzip and install
unzip terraform_0.9.4_linux_amd64.zip

cd ~/packer

# Download Terraform.
curl -O https://releases.hashicorp.com/packer/0.10.0/packer_0.10.0_linux_amd64.zip
# Unzip and install
unzip packer_0.10.0_linux_amd64.zip

echo '
# Terraform & Packer Paths.
export PATH=~/terraform:~/packer/:$PATH
' >>~/.bashrc

source ~/.bashrc

# verify we're all set to terraform and packer.
terraform
packer
